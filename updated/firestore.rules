rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to check if user has active subscription
    function hasActiveSubscription() {
      let subscription = get(/databases/$(database)/documents/subscriptions/$(request.auth.uid)).data;
      return subscription.status == 'active' || subscription.status == 'trial';
    }
    
    // Users collection - users can only read/write their own data
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isOwner(userId);
      allow delete: if false; // Prevent deletion
    }
    
    // Subscription plans - anyone can read, no one can write (admin only via console)
    match /subscription_plans/{planId} {
      allow read: if true;
      allow write: if false;
    }
    
    // Subscriptions - users can read their own subscription and create during registration or payment
    match /subscriptions/{userId} {
      allow read: if isOwner(userId);
      // Allow create if it's the user's own subscription with trial or active status
      allow create: if isAuthenticated() && request.auth.uid == userId && 
                       (request.resource.data.status == 'trial' || request.resource.data.status == 'active');
      // Allow update for user's own subscription (e.g., when making payments or cancelling)
      allow update: if isOwner(userId);
    }
    
    // Payments - users can create and manage their own payments
    match /payments/{paymentId} {
      // Allow read for direct document access and queries filtered by userId
      allow read: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        request.resource == null  // Allow queries
      );
      // Allow list (queries) if filtering by userId
      allow list: if isAuthenticated() && 
        request.query.limit <= 50;  // Prevent unbounded queries
      // Allow create if user is authenticated and userId in the document matches their UID
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      // Allow update if user owns the payment record
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Computers - requires active subscription or trial
    match /computers/{computerId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isOwner(resource.data.userId);
      allow delete: if isOwner(resource.data.userId);
    }
    
    // Sales - requires active subscription or trial
    match /sales/{saleId} {
      // Allow read for direct document access and queries filtered by userId
      allow read: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        request.resource == null  // Allow queries
      );
      // Allow list (queries) if filtering by userId
      allow list: if isAuthenticated() && 
        request.query.limit <= 100;  // Prevent unbounded queries
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isOwner(resource.data.userId);
      allow delete: if isOwner(resource.data.userId);
    }
    
    // Customers - requires active subscription or trial
    match /customers/{customerId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isOwner(resource.data.userId);
      allow delete: if isOwner(resource.data.userId);
    }
  }
}
